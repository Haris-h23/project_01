<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dtu.example.ui.SecondaryController"
      alignment="CENTER" spacing="10" prefWidth="400" prefHeight="500"
      style="-fx-padding: 20;">

    <Label text="Enter your initials:"/>
    <TextField fx:id="initialsField" maxWidth="200"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Button text="Show All Projects" onAction="#handleShowAll"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
